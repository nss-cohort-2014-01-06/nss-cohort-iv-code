doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Animal Shelter
    .row
      .small-12.columns
        form
          fieldset
            legend Animal Intake
            .row
              .small-3.columns
                label &nbsp;
                button#add-animal.tiny.radius.expand Add Animal
              .small-9.columns
            .row
              .small-3.columns
                label Name
                input#name(type='text', autofocus=true)
              .small-3.columns
                label Species
                input#species(type='text')
              .small-2.columns
                label Gender
                input#gender(type='text')
              .small-2.columns
                label Age
                input#age(type='text')
              .small-2.columns
                label Color
                input#color(type='text')
            .row
              .small-6.columns
                label Photo
                input#photo(type='text')
                .row
                  .small-12.columns
                    #photos
              .small-2.columns
                label &nbsp;
                button#add-photo.tiny.radius.expand Add Photo
              .small-4.columns
                label Description
                textarea#description
    .row
      .small-12.columns
        table#animals
          thead
            tr
              th Name
              th Species
              th Gender
              th Age
              th Color
              th Description
              th Photos
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/animal.js')
    script(src='/js/source/animal_factory.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

