doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Tasks
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Tasks
    .row
      .small-12.columns
        a.button.tiny.radius(href='/priorities.html') Priority Management
    .row
      .small-12.columns
        form#task
          fieldset
            legend Task Creation
            .row
              .small-3.columns
                label Title
                input(type='text', name='title', autofocus=true)
              .small-3.columns
                label Due Date
                input(type='date', name='dueDate')
              .small-3.columns
                label Priority
                select(name='priorityId')
                  option Select One
              .small-3.columns
                label Tags
                input(type='text', name='tags')
            .row
              .small-2.columns
                label &nbsp;
                button.expand.tiny.radius Create
              .small-10.columns
    .row
      .small-2.columns
        input#limit(type='text', placeholder='limit')
      .small-5.columns
        p
      .small-2.columns
        button#prev.tiny.radius.expand Previous
      .small-1.columns
        p#page 1
      .small-2.columns
        button#next.tiny.radius.expand Next
    .row
      .small-12.columns
        table#tasks
          thead
            tr
              th: a.sort.isComplete(href='#') Done?
              th Title
              th: a.sort.dueDate(href='#') Due Date
              th Priority
              th Tags
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

